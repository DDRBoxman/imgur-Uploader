<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:gravity="center_horizontal">

	<GridView android:id="@+id/HistoryGridView"
		android:paddingTop="2dip" android:numColumns="auto_fit"
		android:columnWidth="148dp" android:stretchMode="spacingWidthUniform"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_above="@+id/ImageActionLayout"
		android:layout_alignParentTop="true" />

	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/ImageActionLayout"
		android:background="@android:color/background_dark"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true" android:gravity="bottom|center_horizontal">

		<ImageButton android:id="@+id/ImageButtonShare"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_share" />
		<ImageButton android:layout_toRightOf="@+id/ImageButtonShare"
			android:id="@+id/ImageButtonLaunchBrowser" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:src="@drawable/globe" />
		<ImageButton android:layout_toRightOf="@+id/ImageButtonLaunchBrowser"
			android:id="@+id/ImageButtonDelete" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:src="@android:drawable/ic_menu_delete" />



	</RelativeLayout>

</RelativeLayout>
